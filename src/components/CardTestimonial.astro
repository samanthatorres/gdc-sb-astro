---
import { transformImageSrc } from "../utils/imageUtils";
const { testimonial } = Astro.props;
---

<div class="card-testimonial">
  <img src={transformImageSrc(`${testimonial.headshot.filename}/m/120x120`)} alt={testimonial.headshot.alt} width="80" height="80" />
  <p class="quote">
    {testimonial.quip_length ? testimonial.short_quip : testimonial.long_quip}
  </p>
  <p>{testimonial.name} Â· {testimonial.title}</p>
</div>
