---
const { content } = Astro.props;
---

<div class="relative mt-3">
  <ul role="list" class="">
    {
      content.map((heading) => (
        <li class="relative">
          <span class="flex justify-between gap-2 py-1 pr-3 text-sm transition pl-4 text-zinc-900 ">
            {heading.text}
          </span>

          {heading.children && (
            <ul role="list" style="opacity:1">
              {heading.children.map((child) => (
                <li>
                  <span class="flex justify-between gap-2 py-1 pr-3 text-sm transition pl-7 text-zinc-600 hover:text-zinc-900 ">
                    {child.text}
                  </span>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))
    }
  </ul>
</div>
