---
import { storyblokEditable, renderRichText } from '@storyblok/astro'
 
 const { blok } = Astro.props
 const renderedRichText = renderRichText(blok.post)
 const TitleElement = blok.page_title_heading_level
 ---
  
 <article {...storyblokEditable(blok)}>
   <div class="container mx-auto mb-12">
     <h1 class="text-4xl text-light-teal font-bold mt-12 mb-4 font-serif">
       {blok.title}
     </h1>
     <div class="prose prose-headings:font-serif" set:html={renderedRichText} />
   </div>
 </article>