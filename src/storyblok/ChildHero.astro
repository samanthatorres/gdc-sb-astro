---
import { storyblokEditable } from '@storyblok/astro'
 
const { blok } = Astro.props
const TitleElement = blok.heading_level || 'p'

let href = null
if (blok.link) {
  if (blok.link.linktype === 'url') {
    href = blok.link.url;
  } else if (blok.link.linktype === 'story' && blok.link.story) {
    href = '/' + blok.link.story.full_slug;
  }
}
---

<div {...storyblokEditable(blok)}>
  <section class="hero">
    <div class="ipu">
        <div>
          {blok.prehead &&
            <p class="prehead">{blok.prehead}</p>
          }
          <TitleElement class='headline'>
            {blok.headline}
          </TitleElement>
          <p>{blok.description}</p>
          {blok.cta &&
            <a href={href} class="btnPrimary">{blok.button_text}</a>
          }
        </div>
        <div>
          <img
            src={`${blok.image.filename}/m/`}
            width="418"
            height="215"
          />
        </div>
    </div>
</section>
</div>
