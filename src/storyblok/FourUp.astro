---
import { storyblokEditable } from "@storyblok/astro";
import Wysiwyg from "./Wysiwyg.astro";

const { blok } = Astro.props;
const TitleElement = blok.heading_level || "p";
---

<div {...storyblokEditable(blok)}>
  <section class="inner-section">
    <div class="ipu">
      <div>
        <TitleElement class="blok-title">
          {blok.headline}
        </TitleElement>
      </div>

      <div class="flex-wrap wrap-two">
        <div class="col-flex-row">
          <p class="title">01</p>
          <div>
            <p class="inner-highlight">
              {blok.highlight_1}
            </p>
            <Wysiwyg blok={blok} content={blok.description_1} />
          </div>
        </div>

        <div class="col-flex-row">
          <p class="title">02</p>
          <div>
            <p class="inner-highlight">
              {blok.highlight_2}
            </p>
            <Wysiwyg blok={blok} content={blok.description_2} />
          </div>
        </div>

        <div class="col-flex-row">
          <p class="title">03</p>
          <div>
            <p class="inner-highlight">
              {blok.highlight_3}
            </p>
              <Wysiwyg blok={blok} content={blok.description_3} />
          </div>
        </div>

        <div class="col-flex-row">
          <p class="title">04</p>
          <div>
            <p class="inner-highlight">
              {blok.highlight_4}
            </p>
            <Wysiwyg blok={blok} content={blok.description_4} />
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
